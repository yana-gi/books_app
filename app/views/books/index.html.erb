<p id="notice"><%= notice %></p>

<h1><%= Book.model_name.human %> <%= t 'page.index' %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name("title") %></th>
      <th><%= Book.human_attribute_name("memo") %></th>
      <th><%= Book.human_attribute_name("picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('button.show'), book %></td>
        <td><%= link_to t('button.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('button.destroy'), book, method: :delete, data: { confirm: t('message.confirm.destoroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>

<br>

<%= link_to t('button.new'), new_book_path %>
